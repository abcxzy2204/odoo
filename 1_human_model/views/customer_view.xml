<odoo>
    <data>
        <!-- Sequence for Customer Reference -->
        <record id="seq_human_customer" model="ir.sequence">
            <field name="name">Customer Sequence</field>
            <field name="code">human.customer</field>
            <field name="padding">5</field>
            <field name="prefix">CUST</field>
        </record>

        <record id="view_customer_tree" model="ir.ui.view">
            <field name="name">human.customer.tree</field>
            <field name="model">human.customer</field>
            <field name="arch" type="xml">
                <tree string="Customers">
                    <field name="customer_ref"/>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="customer_level"/>
                    <field name="total_sales"/>
                    <field name="is_active_customer"/>
                </tree>
            </field>
        </record>

        <record id="view_customer_form" model="ir.ui.view">
            <field name="name">human.customer.form</field>
            <field name="model">human.customer</field>
            <field name="arch" type="xml">
                <form string="Customer">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="customer_ref" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Personal Information">
                                <field name="name"/>
                                <field name="age"/>
                                <field name="gender"/>
                            </group>
                            <group string="Customer Information">
                                <field name="customer_level"/>
                                <field name="total_sales"/>
                                <field name="joining_date"/>
                                <field name="is_active_customer"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_human_customer" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="res_model">human.customer</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>